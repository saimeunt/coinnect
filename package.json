{
  "name": "coinnect",
  "version": "1.0.0",
  "description": "Coinnect",
  "author": "saimeunt",
  "license": "ISC",
  "scripts": {
    "lint": "next lint",
    "prettier": "prettier --write \"{app,components,contracts,lib}/**/*.{ts,tsx,sol}\"",
    "tsc": "tsc --noEmit",
    "dev": "next dev",
    "build": "pnpm hardhat:compile && next build",
    "hardhat:node": "hardhat node",
    "hardhat:compile": "hardhat compile",
    "hardhat:deploy:localhost": "hardhat run scripts/deploy.ts --network localhost",
    "hardhat:deploy:mumbai": "NODE_ENV=production hardhat run scripts/deploy.ts --network mumbai",
    "hardhat:test": "hardhat test",
    "hardhat:coverage": "hardhat coverage"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-solidity",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 100,
          "tabWidth": 2
        }
      }
    ]
  },
  "dependencies": {
    "@clerk/nextjs": "^4.23.0",
    "@headlessui/react": "^1.7.15",
    "@heroicons/react": "^2.0.18",
    "@openzeppelin/contracts": "^4.9.2",
    "@rainbow-me/rainbowkit": "^1.0.7",
    "alchemy-sdk": "^2.9.2",
    "clsx": "^1.2.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.6.4",
    "lodash": "^4.17.21",
    "next": "^13.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "satori": "^0.10.1",
    "slugify": "^1.6.6",
    "swr": "^2.2.0",
    "usehooks-ts": "^2.9.1",
    "viem": "^1.4.0",
    "wagmi": "^1.3.9",
    "web3.storage": "^4.5.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.4",
    "@typechain/ethers-v6": "^0.4.2",
    "@typechain/hardhat": "^8.0.2",
    "@types/chai": "^4.3.5",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.4",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.14",
    "chai": "^4.3.7",
    "eslint": "^8.45.0",
    "eslint-config-next": "^13.4.12",
    "eslint-config-prettier": "^8.8.0",
    "hardhat": "^2.17.0",
    "hardhat-gas-reporter": "^1.0.9",
    "postcss": "^8.4.27",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "solidity-coverage": "^0.8.4",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.0",
    "typescript": "^5.1.6"
  }
}
